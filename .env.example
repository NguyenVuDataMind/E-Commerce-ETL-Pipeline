# =================================================================
# FACOLOS ENTERPRISE ETL ENVIRONMENT CONFIGURATION
# =================================================================
# Hướng dẫn: Copy file này thành .env và điền các giá trị thực tế

# ENTERPRISE SETTINGS
COMPANY_NAME=Facolos
ENVIRONMENT=development

# =================================================================
# E-COMMERCE PLATFORMS CREDENTIALS
# =================================================================

# TikTok Shop API Configuration (ACTIVE)
TIKTOK_APP_KEY=your_tiktok_app_key_here
TIKTOK_APP_SECRET=your_tiktok_app_secret_here
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token_here
TIKTOK_REFRESH_TOKEN=your_tiktok_refresh_token_here
TIKTOK_SHOP_CIPHER=your_tiktok_shop_cipher_here


# Shopee API Configuration 
SHOPEE_PARTNER_ID=your_shopee_partner_id
SHOPEE_PARTNER_KEY=your_shopee_partner_key
SHOPEE_SHOP_ID=your_shopee_shop_id
SHOPEE_REDIRECT_URI=https://yourdomain.com/

# Shopee tokens (chỉ cần cho lần chạy đầu; lần sau sẽ đọc DB và tự refresh)
SHOPEE_ACCESS_TOKEN=your_shopee_access_token
SHOPEE_REFRESH_TOKEN=your_shopee_refresh_token


# =================================================================
# ADVERTISING PLATFORMS CREDENTIALS  
# =================================================================

# TikTok Ads Configuration (FUTURE)
TIKTOK_ADS_APP_ID=
TIKTOK_ADS_SECRET=



# MISA CRM Configuration (Required for MISA ETL)
MISA_CRM_CLIENT_ID=your_misa_crm_client_id
MISA_CRM_CLIENT_SECRET=your_misa_crm_client_secret
MISA_CRM_ACCESS_TOKEN=your_misa_crm_access_token
MISA_CRM_BASE_URL=https://crmconnect.misa.vn

# =================================================================
# DATABASE CONFIGURATION
# =================================================================

# SQL Server Database Configuration (Enterprise Data Warehouse)
SQL_SERVER_HOST=sqlserver
SQL_SERVER_PORT=1433
SQL_SERVER_DATABASE=Facolos_Staging
SQL_SERVER_USERNAME=sa
SQL_SERVER_PASSWORD=your_secure_password_here

# =================================================================
# API SETTINGS
# =================================================================

# TikTok Shop API Settings
TIKTOK_SHOP_API_BASE_URL=https://open-api.tiktokglobalshop.com
API_TIMEOUT=30
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=5

# =================================================================
# ETL CONFIGURATION
# =================================================================

# ETL Performance Settings
ETL_BATCH_SIZE=1000
ETL_PAGE_SIZE=50
ETL_MAX_DAYS_BACK=30
ETL_DEFAULT_FREQUENCY_HOURS=0.25

# =================================================================
# LOGGING CONFIGURATION
# =================================================================

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=logs/facolos_enterprise_etl.log

# Airflow Secret Key (tạo mới bằng: openssl rand -hex 32)
AIRFLOW_WEBSERVER_SECRET_KEY=your_airflow_secret_key_here

